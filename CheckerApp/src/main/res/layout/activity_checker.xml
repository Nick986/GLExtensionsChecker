<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:background="@android:color/holo_blue_dark"
              tools:context="it.dorigatti.android.glchecker.CheckerActivity$PlaceholderFragment"
              android:weightSum="10"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@android:color/white">

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/glextensions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gl_version_text"
                    android:textIsSelectable="true"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gl_renderer_text"
                    android:textIsSelectable="true"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gl_extensions_text"
                    style="@style/MyTextViewStyle"
                    android:textIsSelectable="true"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gl_extensions_available_text"
                    android:textIsSelectable="true"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
            android:background="@android:color/black"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:id="@+id/glLayout"/>
</LinearLayout>
